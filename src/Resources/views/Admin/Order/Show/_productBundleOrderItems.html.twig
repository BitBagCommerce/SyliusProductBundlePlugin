<div class="ui accordion">
    <div class="title">
        <i class="dropdown icon"></i> <strong>{{ 'bitbag_sylius_product_bundle.ui.products_in_bundle'|trans }}</strong>
    </div>

    <div class="content bundled-items">
        {% for item in items %}
            {% set variant = item.productVariant %}
            {% set product = variant.product %}

            <div class="bundled-item">
                <div class="ui header">
                    {% include '@SyliusAdmin/Product/_mainImage.html.twig' with {'product': product, 'filter': 'sylius_admin_product_tiny_thumbnail'} %}
                    <div class="content">
                        <div class="sylius-product-name" title="{{ product.name }}">{{ product.name }}</div>
                        <span class="sub header sylius-product-variant-code" title="{{ variant.code }}">
                            {{ variant.code }}
                        </span>
                    </div>
                </div>
                <div class="ui horizontal list">
                    {% if product.hasOptions() %}
                        {% for optionValue in variant.optionValues %}
                            <div class="item">
                                <span class="ui gray label">{{ optionValue.value }}</span>
                            </div>
                        {% endfor %}
                    {% elseif variant.name is not null %}
                        <div class="item">
                            <span class="ui gray label">{{ variant.name }}</span>
                        </div>
                    {% endif %}
                    <div class="item">
                        <span class="ui gray label">{{ 'bitbag_sylius_product_bundle.ui.quantity'|trans }}: {{ item.quantity }}</span>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
