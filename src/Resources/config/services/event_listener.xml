<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
                id="bitbag_sylius_product_bundle_plugin.request_listener.add_product_to_product_bundle_when_edit_normal_product"
                class="BitBag\SyliusProductBundlePlugin\EventListener\AddProductToProductBundleWhenEditNormalProductEventListener">
            <tag name="kernel.event_listener" event="sylius.product.pre_update" method="addProductToProductBundle"/>
            <tag name="kernel.event_listener" event="sylius.product.pre_create" method="addProductToProductBundle"/>
        </service>
    </services>
</container>
