<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
                id="bitbag_sylius_product_bundle.validator.valid_add_product_bundle_to_cart_command"
                class="BitBag\SyliusProductBundlePlugin\Validator\ValidAddProductBundleToCartCommandValidator"
        >
            <argument type="service" id="bitbag_sylius_product_bundle.repository.product_bundle" />
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="sylius.availability_checker" />

            <tag
                    name="validator.constraint_validator"
                    alias="bitbag_sylius_product_bundle_validator_valid_add_product_bundle_to_cart_command"
            />
        </service>
        <service id="bitbag_sylius_product_bundle.validator.is_product_bundle" class="BitBag\SyliusProductBundlePlugin\Validator\IsProductBundleValidator">
            <tag name="validator.constraint_validator" alias="bitbag_sylius_product_bundle_validator_is_product_bundle" />
        </service>
        <service id="bitbag_sylius_product_bundle.validator.has_valid_order_identifier" class="BitBag\SyliusProductBundlePlugin\Validator\HasValidOrderIdentifierValidator">
            <argument type="service" id="sylius.repository.order" />

            <tag name="validator.constraint_validator" alias="bitbag_sylius_product_bundle_validator_has_valid_order_identifier" />
        </service>
        <service id="bitbag_sylius_product_bundle.validator.is_valid_product_bundle_identifier" class="BitBag\SyliusProductBundlePlugin\Validator\HasValidOrderIdentifierValidator">
            <argument type="service" id="sylius.repository.order" />

            <tag name="validator.constraint_validator" alias="bitbag_sylius_product_bundle_validator_has_valid_order_identifier" />
        </service>
        <service id="bitbag_sylius_product_bundle.validator.has_valid_product_bundle_identifier" class="BitBag\SyliusProductBundlePlugin\Validator\HasValidProductBundleIdentifierValidator">
            <argument type="service" id="bitbag_sylius_product_bundle.repository.product_bundle" />

            <tag name="validator.constraint_validator" alias="bitbag_sylius_product_bundle_validator_has_valid_product_bundle_identifier" />
        </service>
    </services>
</container>
