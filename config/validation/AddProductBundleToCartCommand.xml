<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        https://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="BitBag\SyliusProductBundlePlugin\Command\AddProductBundleToCartCommand">
        <constraint name="BitBag\SyliusProductBundlePlugin\Validator\Sequentially">
            <constraint name="BitBag\SyliusProductBundlePlugin\Validator\HasExistingCart"/>
            <constraint name="BitBag\SyliusProductBundlePlugin\Validator\HasProductBundle"/>
            <constraint name="BitBag\SyliusProductBundlePlugin\Validator\HasAvailableProductBundle"/>
        </constraint>

        <property name="quantity">
            <constraint name="Positive"/>
        </property>
    </class>
</constraint-mapping>
